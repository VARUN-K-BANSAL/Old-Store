<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

    <link rel="stylesheet" href="../css/login.css">
</head>

<body>
    <%- include('navbar')%>

        <div class="container">
            <div class="center_right">
                <form action="/user/register" method="POST" class="register-form">
                    <h3>Sign Up</h3>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input name="userName" type="text" class="form-control" id="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                            aria-describedby="emailHelp" required>
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="batch" class="form-label">Graduating year</label>
                        <input name="batch" type="number" class="form-control" id="batch" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input name="password" type="password" class="form-control" id="password" required onchange="passwordChanged()">
                    </div>
                    <div class="mb-3">
                        <label for="confirm_password" class="form-label">Confirm Password</label>
                        <input name="confirm_password" type="password" class="form-control" id="confirm_password" required onchange="passwordChanged()">
                        <div id="passHelp" style="display: none; color: red;" class="form-text">Password and confirm password should match</div>
                    </div>
                    <button type="submit" class="btn btn-primary login-btn" id="signUpBtn" disabled>SIGN UP</button>
                    <h5>Already a member?</h5>
                    <a href="/user/login"><div class="registerBtn">Click here to Login</div></a>
                </form>
            </div>
        </div>
    <footer class="foot" id="contact">
        <p>&copy; 2022 - oldstore.com</p>
    </footer>

    <script>
        function passwordChanged() {
            let pass = document.getElementById('password').value
            let cpass = document.getElementById('confirm_password').value
            if(cpass == pass){
                document.getElementById('passHelp').style.display = 'none'
                document.getElementById('signUpBtn').disabled = false
            }
            else{
                document.getElementById('passHelp').style.display = 'block'
                document.getElementById('signUpBtn').disabled = true
            }
        }
    </script>
</body>

</html>